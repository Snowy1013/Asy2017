<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe7ba">


    <fragment
        android:id="@+id/frag_staticimple_title"
        android:name="com.snowy.sample.uicode.fragment.StaticTitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <fragment
        android:id="@+id/frag_static_content"
        android:name="com.snowy.sample.uicode.fragment.StaticContentFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frag_staticimple_title" />
</RelativeLayout>