<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_load_bigimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载图片" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_animat_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帧动画" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="补间动画"
            android:id="@+id/btn_animat_tween"
            android:layout_above="@+id/btn_animat_frame"/>

        <Button
            android:id="@+id/btn_animat_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="属性动画"
            android:layout_below="@+id/btn_animat_frame"/>
    </LinearLayout>
</LinearLayout>